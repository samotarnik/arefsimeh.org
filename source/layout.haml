%html
  %head
    %meta{:charset => "utf-8"}
    -# Always force latest IE rendering engine (even in intranet) & Chrome Frame
    %meta{:content => "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible"}
    %meta{:content => "Nasprotna Hemisfera. The Other Hemisphere.", :name => "description"}/
    = stylesheet_link_tag "site.css"
    = yield_content :head
    %link{:href => "http://fonts.googleapis.com/css?family=Pacifico|Open+Sans:400italic,400&subset=latin,latin-ext", :rel => "stylesheet", :type => "text/css"}
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-27153523-1']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

  %body{:class => page_classes}
    #container
      #pocek
      #sidebar
        #logo
        = yield_content :sidebar
      #main
        #select-language
          = link_to 'SI', 'index.html'
          &nbsp; | &nbsp;
          = link_to 'EN', 'about.html'
        = yield
        #footer
          = yield_content :footer
